<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Awards_Events</name>
    <events>
        <include>Pause</include>
        <comment>Load saved dictionary from Local Webstorage</comment>
        <event-block sid="4792011810711841">
            <conditions>
                <condition id="-2" name="On start of layout" sid="775597830862535" type="System" />
            </conditions>
            <actions>
                <action id="4" name="Load" sid="6313041234923792" type="Dictionary">
                    <param id="0" name="JSON">WebStorage.LocalValue(&quot;SaveAwardDict&quot;)</param>
                </action>
            </actions>
        </event-block>
        <event-block sid="7381549663589597">
            <conditions>
                <condition id="3" name="On touched object" sid="4618779989341748" type="Touch">
                    <param id="0" name="Object">GoToMainMenu</param>
                </condition>
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" sid="8856499599333706" type="System">
                    <param id="0" name="Layout">MainMenu</param>
                </action>
            </actions>
        </event-block>
        <comment>On collecting any award add corresponding key to Dictionary and save to SaveDictionary at webstorage</comment>
        <event-group description="" sid="7300123784787128" title="Award collection">
            <sub-events>
                <event-block sid="2110419498246064">
                    <conditions>
                        <condition id="0" name="On collision with another object" sid="7066255794057659" type="Dino">
                            <param id="0" name="Object">Cup</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" sid="3112058945485791" type="Cup" />
                        <action id="0" name="Add key" sid="2049340172440335" type="Dictionary">
                            <param id="0" name="Key">&quot;Cup&quot;</param>
                            <param id="1" name="Value">1</param>
                        </action>
                        <action id="0" name="Set local value" sid="2710220675262758" type="WebStorage">
                            <param id="0" name="Key">&quot;SaveAwardDict&quot;</param>
                            <param id="1" name="Value">Dictionary.AsJSON</param>
                        </action>
                    </actions>
                </event-block>
                <event-block sid="4125433121787611">
                    <conditions>
                        <condition id="0" name="On collision with another object" sid="2506941584095776" type="Dino">
                            <param id="0" name="Object">Sword</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" sid="3739480623658097" type="Sword" />
                        <action id="0" name="Add key" sid="6553509481985731" type="Dictionary">
                            <param id="0" name="Key">&quot;Sword&quot;</param>
                            <param id="1" name="Value">1</param>
                        </action>
                        <action id="0" name="Set local value" sid="8190202081544424" type="WebStorage">
                            <param id="0" name="Key">&quot;SaveAwardDict&quot;</param>
                            <param id="1" name="Value">Dictionary.AsJSON</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <comment>If an award has corresponding key at dictionary Unlock it</comment>
        <event-group description="" sid="8188126121644988" title="Unlocking the awards on award screen">
            <sub-events>
                <event-block sid="6981085565093642">
                    <conditions>
                        <condition id="3" name="Has key" sid="679138956476273" type="Dictionary">
                            <param id="0" name="Key">&quot;Cup&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-16" name="Set opacity" sid="9735528737493916" type="CupAward">
                            <param id="0" name="Opacity">100</param>
                        </action>
                    </actions>
                </event-block>
                <event-block sid="133890929838587">
                    <conditions>
                        <condition id="3" name="Has key" sid="7013036636918916" type="Dictionary">
                            <param id="0" name="Key">&quot;Sword&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-16" name="Set opacity" sid="1049048715038743" type="SwordAward">
                            <param id="0" name="Opacity">100</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
